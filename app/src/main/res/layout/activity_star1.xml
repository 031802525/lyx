<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <include layout="@layout/back"/>

        <TextView
            android:id="@+id/ipt_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间：0"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="#FF0000" />

        <LinearLayout
            android:id="@+id/pt_line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageButton
                android:id="@+id/pt_iv_00x00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/biwenjun3_01"
                android:padding="0dp"
                android:onClick="onClick"/>
            <ImageButton
                android:id="@+id/pt_iv_00x01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/biwenjun3_02"
                android:padding="0dp"
                android:onClick="onClick"/>
            <ImageButton
                android:id="@+id/pt_iv_00x02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/biwenjun3_03"
                android:padding="0dp"
                android:onClick="onClick"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pt_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageButton
                android:id="@+id/pt_iv_01x00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/biwenjun3_04"
                android:padding="0dp"
                android:onClick="onClick"/>
            <ImageButton
                android:id="@+id/pt_iv_01x01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/biwenjun3_05"
                android:padding="0dp"
                android:onClick="onClick"/>
            <ImageButton
                android:id="@+id/pt_iv_01x02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/biwenjun3_06"
                android:padding="0dp"
                android:onClick="onClick"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pt_line3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageButton
                android:id="@+id/pt_iv_02x00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/biwenjun3_07"
                android:padding="0dp"
                android:onClick="onClick"/>
            <ImageButton
                android:id="@+id/pt_iv_02x01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/biwenjun3_08"
                android:padding="0dp"
                android:onClick="onClick"/>
            <ImageButton
                android:id="@+id/pt_iv_02x02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/biwenjun3_09"
                android:padding="0dp"
                android:onClick="onClick"
                />

        </LinearLayout>

        <Button
            android:id="@+id/pt_btn_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="restart"
            android:layout_gravity="center"
            android:text="戳我开始~"
            />
        <Button
            android:id="@+id/remain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="remain"
            android:layout_gravity="center"
            android:text="戳我继续~"/>

        <ImageView
            android:id="@+id/pt_iv"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@mipmap/biwenjun"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>
